extends layout

block content
    link(rel='stylesheet', href='/stylesheets/sco.message.css')
    link(rel='stylesheet', href='/stylesheets/message.css')
    link(rel='stylesheet', href='/css/messenger.css')
    link(rel='stylesheet', href='/css/messenger-theme-flat.css')


    .container
        .row
            .col-sm-3 
                .panel.panel-success(style="margin-right:-10px;")
                    .panel-heading
                        span.glyphicon.glyphicon-user &nbsp;
                        span 在线成员
                    .panel-body1
                        .msg-list-body.user-contentOn
                            ul
                                li(style="display:none;")
                                    a(href="#")
                                        img.img-thumbnail(src="/images/1.jpg")
                                        span           
                    .panel-footer

                    .panel-heading
                        span.glyphicon.glyphicon-user &nbsp;
                        span 离线成员
                    .panel-body2
                        .msg-list-body.user-contentOff
                            ul
                                li(style="display:none;")
                                    a(href="#")
                                        img.img-thumbnail(src="/images/1.jpg")
                                        span
                    .panel-footer
                        .btn-group
                            button.btn.btn-warning#icon-search(type="button")
                                span.glyphicon.glyphicon-search 
                            button.btn.btn-warning#icon-delete(type="button")
                                span.glyphicon.glyphicon-minus 
                            button.btn.btn-warning#icon-accept(type="button")
                                span.glyphicon.glyphicon-envelope
                            button.btn.btn-warning#icon-group(type="button")
                                span.glyphicon.glyphicon-user
            .col-sm-9
                .panel.panel-success
                    .panel-heading
                        span.glyphicon.glyphicon-comment &nbsp;
                        span#chatTitle 聊天室
                        span#spanuser(style="float:right;")
                    .panel-body
                        .msg-list-body
                            .msg-content#msgcontent(style="text-align:center")

                    .panel-footer
                        .input-group
                            .input-group-addon
                                a(href="#")
                                    img(src="/images/bq.png")
                            .input-group-addon(style="padding-bottom:0px;")
                                label(style="position:relative;")
                                    img(src="/images/jt.jpg",title="send images",style="cursor:pointer;")
                                    input#sendImage(type="file",value="images",style="display:none;")
                            input.form-control#msg(type="text",placeholder="请输入聊天内容",onkeydown="javascript:keywordsMsg(event);")
                            span.input-group-btn
                                button.btn.btn-warning#sendMsg(type="button") 发送/Send
                        
    .modal.fade#myModal(tabindex="-1")
        .modal-dialog
            .modal-content
                
                .modal-header
                    h4.modal-title#myModalLabel 注册
                    h5.modal-title#status 输入你的信息
                .modal-body
                    .form-group
                        .input-group
                            .input-group-addon 昵称
                            input.form-control#username(type="text",placeHolder="昵称",onkeydown="javascript:keywordsName(event);")
                        .input-group
                            .input-group-addon 密码
                            input.form-control#password(type="text",placeHolder="密码",onkeydown="javascript:keywordsName(event);")
                        .input-group
                            .input-group-addon 邮箱
                            input.form-control#email(type="text",placeHolder="邮箱",onkeydown="javascript:keywordsName(event);")
                                
                .modal-footer
                    input.btn.btn-primary#btn-register(type="button",value="注册")

                .modal-header
                    h4.modal-title#myModalLabel 登录
                    h5.modal-title#status2 输入你的信息
                .modal-body
                    .form-group
                        .input-group
                            .input-group-addon 昵称
                            input.form-control#username2(type="text",placeHolder="昵称",onkeydown="javascript:keywordsName1(event);")
                        .input-group
                            .input-group-addon 密码
                            input.form-control#password2(type="text",placeHolder="密码",onkeydown="javascript:keywordsName2(event);")
                                
                .modal-footer
                    input.btn.btn-primary#btn-login(type="button",value="登录",onkeydown="javascript:keywordsName2(event);")

    .modal.fade#searchUser(tabindex="-1")
        .modal-dialog
            .modal-content
                .modal-header
                    h4.modal-title#searchUserLabel
                .modal-body
                    input.form-control#input_searchUser(type="text",onkeydown="javascript:keywordsName1(event);")
                    h5.modal-title#namelist
                    input.form-control#addReason(type="text") 
                    h5.modal-title#addSendlabel
                .modal-footer
                    input.btn.btn-primary#btn-search(type="button",value="发送/Send")

    .modal.fade#deleteUser(tabindex="-1")
        .modal-dialog
            .modal-content
                .modal-header
                    h4.modal-title#deleteUserLabel
                .modal-body
                    h5.modal-title#delnamelist
                .modal-footer

    .modal.fade#acceptUser(tabindex="-1")
        .modal-dialog
            .modal-content
                .modal-header
                    h4.modal-title#acceptUserLabel
                .modal-body
                    h5.modal-title#accnamelist
                .modal-footer
    
     .modal.fade#groupUser(tabindex="-1")
        .modal-dialog
            .modal-content
                .modal-header
                    h4.modal-title#groupUserLabel
                .modal-body
                    h5.modal-title#groupnamelist

                    h5.modal-title#toModify
                    input.form-control#groupName(type="text") 
                    h5.modal-title#groupSendlabel
                .modal-footer

    script(src="/socket.io/socket.io.js")
    script(src='/javascripts/chatjs.js')
    script(src='/javascripts/client.js')
    script(src='/javascripts/sco.message.js')
    script(src="/js/messenger.min.js")
    script(src="/js/messenger-theme-flat.js")